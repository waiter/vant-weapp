
var REGEXP = null;
function initREG() {
  if (REGEXP) {
    return;
  }
  if (typeof RegExp === 'function') {
    REGEXP = new RegExp('{|}|"', 'g');
  } else {
    REGEXP = getRegExp('{|}|"', 'g');
  }
}

function keys(obj) {
  if (typeof Object === 'function' && Object.keys) {
    return Object.keys(obj);
  }
  initREG();
  return JSON.stringify(obj)
    .replace(REGEXP, '')
    .split(',')
    .map(function(item) {
      return item.split(':')[0];
    });
}

function isArray(array) {
  if (typeof Array === 'function' && Array.isArray) {
    return Array.isArray(array);
  }
  return array && array.constructor === 'Array';
}

function isPrimitive(value) {
  var type = typeof value;
  return (
    type === 'boolean' ||
    type === 'number' ||
    type === 'string' ||
    type === 'undefined' ||
    value === null
  );
}

// mock simple fn.call in wxs
function call(fn, args) {
  if (args.length === 3) {
    return fn(args[0], args[1], args[2]);
  }

  if (args.length === 2) {
    return fn(args[0], args[1]);
  }

  if (args.length === 1) {
    return fn(args[0]);
  }

  return fn();
}

function serializer(args) {
  if (args.length === 1 && isPrimitive(args[0])) {
    return args[0];
  }
  var obj = {};
  for (var i = 0; i < args.length; i++) {
    obj['key' + i] = args[i];
  }
  return JSON.stringify(obj);
}

function memoize(fn) {
  var cache = {};

  return function() {
    var key = serializer(arguments);
    if (cache[key] === undefined) {
      cache[key] = call(fn, arguments);
    }

    return cache[key];
  };
}

var PREFIX = 'van-';

function join(name, mods) {
  name = PREFIX + name;
  mods = mods.map(function(mod) {
    return name + '--' + mod;
  });
  mods.unshift(name, name + '__' + name);
  return mods.join(' ');
}

function traversing(mods, conf) {
  if (!conf) {
    return;
  }

  if (typeof conf === 'string' || typeof conf === 'number') {
    mods.push(conf);
  } else if (isArray(conf)) {
    conf.forEach(function(item) {
      traversing(mods, item);
    });
  } else if (typeof conf === 'object') {
    keys(conf).forEach(function(key) {
      conf[key] && mods.push(key);
    });
  }
}

function bem(name, conf, more) {
  var mods = [];
  traversing(mods, conf);
  var result = join(name, mods);
  if (more) {
    result += ' ' + more;
  }
  return result;
}

module.exports = {
  bem: function(name, conf, more) {
    return memoize(bem)(name, conf, more);
  }
};
